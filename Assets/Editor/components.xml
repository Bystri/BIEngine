<Components>

	<Component name="TransformComponent">
		<Element name="Position" type="Vec3" fieldNames="x,y,z" />
		<Element name="Rotation" type="Vec3" fieldNames="x,y,z" />
		<Element name="Size" type="Vec3" fieldNames="w,h,d" />
	</Component>
	
	<Component name="PhysicsTriggerComponent">
		<Element name="Scale" type="Vec2" fieldNames="w,h" />
    </Component>
	
	<Component name="PhysicsComponent">
		<Element name="Shape" type="PhysicsShape" />
		<Element name="BodyType" type="PhysicsBodyType" />
		<Element name="Density" type="PhysicsDensity" />
		<Element name="PhysicsMaterial" type="PhysicsMaterial" />
		<Element name="Scale" type="Vec2" fieldNames="w,h" />
    </Component>
	
	<Component name="SpriteRenderComponent">
		<Element name="Color" type="RGB" />
		<Element name="Sprite" type="File" extensions="PNG Files (*.png)|*.png" />
	</Component>
	
	<Component name="CameraComponent"/>
	
</Components>
