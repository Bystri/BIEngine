<World>
  
    <!--Список актеров для загрузки-->

    <Actors>
		<Actor name="camera">
				<TransformComponent>
					<Position x="180" y="320"/>
					<Rotation angle="0.0"/>
					<Size w="360" h="640"/>
				</TransformComponent>
				
				<CameraComponent/>
		</Actor>
		<Actor name="background" resource="actors/background.xml">
			<TransformComponent>
				<Position x="180" y="320"/>
				<Rotation angle="0.0"/>
				<Size w="360" h="640"/>
			</TransformComponent>
			
			<SpriteRenderComponent>
				<Color r="1.0" g="1.0" b="1.0"/>
				<Sprite path="Sprites/background.png"/>
			</SpriteRenderComponent>
		</Actor>
		
		<Actor name="ball" resource="actors/ball.xml">
			<TransformComponent>
				<Position x="155.0" y="295.0"/>
				<Rotation angle="0.0"/>
				<Size w="50.0" h="50"/>
			</TransformComponent>
			<PhysicsComponent>
				<Shape>Circle</Shape>
				<BodyType>Kinematic</BodyType>
				<Density>air</Density>
				<PhysicsMaterial>Normal</PhysicsMaterial>
				<Scale w="25.0" h="25.0"/>
			</PhysicsComponent>
			<SpriteRenderComponent>
				<Color r="1.0" g="1.0" b="1.0"/>
				<Sprite path="Sprites/face.png"/>
			</SpriteRenderComponent>
		</Actor>
    </Actors>


    <!-- Данные скрипты исполняют перед (worldPreInit) и после (worldPostInit) загрузки мира -->
    <!-- <Script preLoad="scripts/worldPreInit.lua" postLoad="scripts/worldPostInit.lua"/> -->

</World>